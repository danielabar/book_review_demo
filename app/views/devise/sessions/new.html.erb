<h2 class="text-2xl font-semibold mb-6 text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "max-w-md mx-auto bg-white p-8 rounded-lg shadow" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4 flex items-center">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-500 border-gray-300 rounded focus:ring-blue-500" %>
      <%= f.label :remember_me, class: "ml-2 text-sm text-gray-600" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= f.submit "Log in", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" %>
  </div>
<% end %>

<div class="mt-4 text-center text-sm text-gray-600">
  <%= render "devise/shared/links" %>
</div>
