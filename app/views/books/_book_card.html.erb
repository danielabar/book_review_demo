<div id="<%= dom_id(book) %>" class="bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition-shadow">
  <h2 class="text-xl font-bold text-gray-800 mb-2">
    <%= link_to book.title, book_path(book), class: "hover:text-blue-500 no-underline" %>
  </h2>
  <p class="text-gray-600 mb-1">Author: <%= book.author %></p>
  <p class="text-gray-500">Published: <%= book.published_year %></p>
  <p class="text-sm text-gray-400">
    <%= pluralize(book.reviews.size, "review") %>
  </p>
</div>
