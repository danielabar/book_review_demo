<div class="max-w-4xl mx-auto px-4 py-8 space-y-10">

  <!-- Back to Book List -->
  <div>
    <%= link_to "← Back to All Books", books_path, class: "inline-block text-indigo-600 hover:text-indigo-800 font-medium transition duration-150" %>
  </div>

  <!-- Book Info -->
  <%= render "books/book_info", book: @book %>

  <!-- Add/Edit Review or Show User Review -->
  <div class="bg-white p-6 rounded-lg shadow">
    <%= render "books/review_form", book: @book, review: @review, user_review: @user_review %>
  </div>

  <!-- Existing Reviews -->
  <div class="bg-white p-6 rounded-lg shadow">
    <%= render "books/reviews_list", reviews_to_show: @reviews_to_show, user_review: @user_review %>
  </div>

</div>
